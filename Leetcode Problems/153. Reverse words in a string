class Solution {
public:
    string reverseWords(string s) {
        s.push_back(' ');

        vector<string> words;
        string word = "";

        for (char c : s) {
            if (c == ' ') {
                if (!word.empty()) {
                    words.push_back(word);
                    word = "";
                }
            } else {
                word += c;
            }
        }

        string result = "";
        reverse(words.begin(), words.end());
        
        for(int i = 0 ; i<words.size() ; i++){
            result += words[i];
            if(i != words.size()-1){
                result += " ";
            }
        }
        return result;
    }
};
